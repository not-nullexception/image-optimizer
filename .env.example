# Server settings
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GIN_MODE=release

# Database settings
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=image_optimizer
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2

# MinIO settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=images
MINIO_SSL=false
MINIO_LOCATION=us-east-1

# RabbitMQ settings
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE=image_processing
RABBITMQ_EXCHANGE=image_exchange
RABBITMQ_ROUTING_KEY=image.resize
RABBITMQ_CONSUMER_TAG=image_worker

# Worker settings
WORKER_COUNT=4
MAX_WORKERS=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_SERVICENAME=image-optimizer
LOG_JSON=true

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing
TRACING_ENABLED=true
TRACING_OTLP_ENDPOINT=tempo:4317
TRACING_SERVICE_NAME=image-optimizer
TRACING_SERVICE_VERSION=1.0.0
TRACING_ENVIRONMENT=dev

# Observability
OBSERVABILITY_METRICS_ENDPOINT=/metrics
OBSERVABILITY_TRACING_ENDPOINT=/traces
OBSERVABILITY_PROFILER_ENABLED=false